<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/logo_carls">


        </ImageView>

        <ImageView
            android:id="@+id/hamburguesa1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            app:srcCompat="@drawable/_hamburguesa_superior"
            />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/layout_1">

        <TextView
            android:id="@+id/nombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carl's Jr."
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="15dp">

        </TextView>
        <TextView
            android:id="@+id/entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="35 - 50 min    .$0.00"
            android:layout_below="@+id/nombre"
            android:layout_marginLeft="15dp"
            android:textSize="10dp"
            ></TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:text="HASTA 43% OFF     ENVIO GRATIS"
            android:layout_below="@+id/entrega"
            android:textColor="#0625EA"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            ></TextView>

<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/corazon"
    android:layout_marginLeft="300dp">

</ImageView>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/compartir"
            android:layout_marginLeft="270dp"
            ></ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/klayout_3"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/layout_2">

        <TextView
            android:id="@+id/porciento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-43%"
            android:textColor="#0625EA"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            ></TextView>

        <TextView
            android:id="@+id/nombre_hamburguesa_1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Burgermania All American o Wild Chesse"
            android:layout_below="@+id/porciento"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:id="@+id/descripcion_1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Elige entre combo AllAmerican Burger o Combo Wild Chesse Burger, Incluye..."
            android:layout_below="@+id/nombre_hamburguesa_1"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:id="@+id/precio_1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="$85.00  "
            android:layout_below="@+id/descripcion_1"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/burger_1"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"
            ></ImageView>

        <Button
            android:id="@+id/BOTTON_1"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/porciento"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="325dp"
            android:backgroundTint="#757474"
            android:text="Ver"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="8dp"
            android:onClick="cambiar_1"
            ></Button>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/klayout_4"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/klayout_3">

        <Button
            android:id="@+id/BOTTON_2"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/porciento_2"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="325dp"
            android:backgroundTint="#757474"
            android:text="Ver"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="8dp"
            android:onClick="cambiar_2"
            ></Button>

        <TextView
            android:id="@+id/porciento_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-50%"
            android:textColor="#0625EA"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            ></TextView>

        <TextView
            android:id="@+id/nombre_hamburguesa_2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Godzilla Big Angus"
            android:layout_below="@+id/porciento_2"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:id="@+id/descripcion_2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Una monstruosa Hamburguesa, con triple carne Angus, triple queso america..."
            android:layout_below="@+id/nombre_hamburguesa_2"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:id="@+id/precio_2"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="$283.00  "
            android:layout_below="@+id/descripcion_2"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/hamburguesa_godzilla"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"
            ></ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/klayout_5"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_below="@+id/klayout_4">

        <Button
            android:id="@+id/BOTTON_3"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_below="@+id/porciento_3"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="325dp"
            android:backgroundTint="#757474"
            android:text="Ver"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="#000000"
            android:textSize="8dp"
            android:onClick="cambiar_3"
            ></Button>

        <TextView
            android:id="@+id/porciento_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-10%"
            android:textColor="#0625EA"
            android:textSize="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            ></TextView>

        <TextView
            android:id="@+id/nombre_hamburguesa_3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="El diablo Big Angus Burger"
            android:layout_below="@+id/porciento_3"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            ></TextView>

        <TextView
            android:id="@+id/descripcion_3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Hamburguesa con tiras de tocino ahumado, jalapeños empanizados, rod..."
            android:layout_below="@+id/nombre_hamburguesa_3"
            android:textSize="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>

        <TextView
            android:id="@+id/precio_3"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="$120.00  "
            android:layout_below="@+id/descripcion_3"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            ></TextView>
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/diablo_burger"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="8dp"
            ></ImageView>

    </RelativeLayout>


</RelativeLayout>
    </ScrollView>
</RelativeLayout>